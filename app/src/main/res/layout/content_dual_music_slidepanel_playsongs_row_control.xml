<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/content_dual_music_slidepanel_row_control_TimeTextLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/content_dual_music_slidepanel_row_control_TimeTextRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/content_dual_music_slidepanel_row_control_Seekbar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/content_dual_music_slidepanel_row_control_Seekbar"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceSmall" />


    <SeekBar
        android:id="@+id/content_dual_music_slidepanel_row_control_Seekbar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <RelativeLayout
        android:id="@+id/content_dual_music_slidepanel_row_control_ButtonHolder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/content_dual_music_slidepanel_row_control_Seekbar"
        android:gravity="center">


        <Button
            android:id="@+id/content_dual_music_slidepanel_row_control_buttonShuffle"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/musc_shuffle_button"
            android:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/notification_buttonSkipBackward"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/content_dual_music_slidepanel_row_control_buttonShuffle"
            android:layout_marginRight="16dp"
            android:background="@android:drawable/ic_media_previous"
            android:backgroundTint="@color/colorAccent" />


        <Button
            android:id="@+id/notification_buttonPlay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/notification_buttonSkipBackward"
            android:background="@android:drawable/ic_media_play"
            android:backgroundTint="@color/colorAccent" />

        <Button
            android:id="@+id/notification_buttonPause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/notification_buttonPlay"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@+id/notification_buttonPlay"
            android:background="@android:drawable/ic_media_pause"
            android:backgroundTint="@color/colorAccent" />

        <Button
            android:id="@+id/notification_buttonSkipForward"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/notification_buttonPause"
            android:layout_toRightOf="@+id/notification_buttonPause"
            android:background="@android:drawable/ic_media_next"
            android:backgroundTint="@color/colorAccent" />


        <ImageView
            android:id="@+id/content_dual_music_slidepanel_row_control_volumeImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/content_dual_music_slidepanel_row_control_buttonShuffle"
            android:src="@drawable/music_volume" />

        <SeekBar
            android:id="@+id/content_dual_music_slidepanel_row_control_seekVolume"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/content_dual_music_slidepanel_row_control_volumeImage" />

        <Button
            android:id="@+id/content_dual_music_slidepanel_row_control_buttonLoop"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/content_dual_music_slidepanel_row_control_seekVolume"
            android:background="@drawable/music_loop_button"
            android:backgroundTintMode="multiply" />

    </RelativeLayout>


</RelativeLayout>