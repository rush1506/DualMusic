<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/support_find_folders_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_directions" />

    <TextView
        android:id="@+id/support_find_folders_path"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/support_find_folders_thumbnail"
        android:textSize="25dp" />

    <Button
        android:id="@+id/support_find_folders_Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/support_find_folders_path"
        android:text="Delete" />


</RelativeLayout>